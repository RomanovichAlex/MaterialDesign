<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myBottomAppBarStyleBlackBlue" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">#222222</item>
    </style>

    <style name="myBottomAppBarStyleGirls" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/hotPink</item>
    </style>

    <style name="myBottomAppBarStyleMens" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">#2b62ff</item>

    </style>

    <style name="myFloatingActionButtonStyleBlack" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#222222</item>
    </style>

    <style name="myFloatingActionButtonStyleBlackBlue" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#2b62ff</item>
    </style>


    <!--    https://material.io/components/bottom-navigation/android#bottom-navigation-bar-->
    <style name="myBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">?superColor</item>
        <item name="textFillColor">@color/white</item>
        <item name="textInputColor">@color/white</item>
        <item name="textAllCaps">@color/white</item>
    </style>



    <style name="myChipChoiceStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/my_choise_chip_backgraund_color</item>
    </style>


    <style name="myMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/shapeAppearanceForCard</item>
        <item name="cardElevation">20dp</item>
    </style>


    <style name="myMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?superColor</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--    TODO colorSurface-->
    <style name="myTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">?superColor</item>
    </style>


    <style name="MyTextAppearanceHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/azeret</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>

    </style>


    <style name="MyTextAppearanceHeadline2" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">28sp</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
        <item name="android:letterSpacing">10</item>
    </style>


    <style name="shapeAppearanceForCard" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">10dp</item>
        <item name="cornerFamily">cut</item>

    </style>


    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
        <item name="chipBackgroundColor">@color/light_gray</item>
        <item name="rippleColor">@color/light_gray</item>
        <item name="chipStrokeColor">@color/light_gray</item>
        <item name="android:windowBackground">@color/light_gray</item>
    </style>

    <style name="myChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/light_gray</item>
        <item name="rippleColor">@color/light_gray</item>
        <item name="chipStrokeColor">@color/light_gray</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="cornerSize">4dp</item>
        <item name="cornerFamily">cut</item>
    </style>
    <!--    TODO ShapeAppearance только для чипов-->
    <style name="myBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">?superColor</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="myFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?superColor</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="myTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">?textInputColor</item>
        <item name="boxBackgroundColor">?textInputColor</item>
    </style>
</resources>