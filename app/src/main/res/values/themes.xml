<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyThemeRed" parent="MyBaseTheme">
        <item name="superColor">@color/red</item>
        <item name="textAppearanceHeadline1">@style/MyTextAppearanceHeadline1</item>
    </style>


    <style name="MyDarkTheme" parent="MyBaseTheme">
        <!-- Primary brand color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="superColor">@color/black</item>
        <item name="iconColor">@color/white</item>
        <item name="textInputColor">@color/white</item>
        <item name="bottomNavigationStyle">@style/myBottomNavigationStyleDark</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyleDark</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyleBlack</item>
        <item name="textAppearanceHeadline1">@style/MyTextAppearanceHeadline2</item>
    </style>

    <style name="MensTheme" parent="MyBaseTheme">
        <item name="superColor">@color/purple_500</item>
        <item name="iconColor">@color/purple_500</item>
        <item name="textInputColor">@color/black</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyleMens</item>
        <item name="textAppearanceHeadline1">@style/MyTextAppearanceHeadline1</item>
    </style>

    <style name="GirlsTheme" parent="MyBaseTheme">4
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="superColor">@color/hotPink</item>
        <item name="iconColor">@color/hotPink</item>
        <item name="textInputColor">@color/black</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyleGirls</item>
        <item name="textAppearanceHeadline1">@style/MyTextAppearanceHeadline1</item>
    </style>

    <style name="MyBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:navigationBarColor">?superColor</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">?superColor</item>
        <item name="colorPrimaryContainer">?superColor</item>
        <item name="colorOnPrimaryContainer">?superColor</item>
        <item name="colorPrimaryInverse">?superColor</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">?superColor</item>
        <item name="colorOnSecondaryContainer">?superColor</item>
        <item name="colorTertiary">?superColor</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">?superColor</item>
        <item name="colorOnTertiaryContainer">?superColor</item>
        <item name="floatingActionButtonStyle">@style/myFABStyle</item>
        <item name="textInputStyle">@style/myTextInputLayoutStyle</item>
        <item name="chipStyle">@style/myChipStyle</item>
        <item name="tabStyle">@style/myTabStyle</item>
        <item name="materialButtonStyle">@style/myMaterialButtonStyle</item>
        <item name="materialCardViewStyle">@style/myMaterialCardViewStyle</item>
        <item name="bottomNavigationStyle">@style/myBottomNavigationStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>